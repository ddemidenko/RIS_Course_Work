@model FileServer.Models.FileModel

@{
    ViewData["Title"] = "Редактирование";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Редактирование файла</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Update" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input asp-for="Id" type="hidden" />

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Название файла</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ShareToAll" class="form-label">Общий доступ</label>
                    <select asp-for="ShareToAll" class="form-select">
                        @foreach (var item in ViewBag.Radio)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ShareToAll" class="text-danger"></span>
                </div>

                <input asp-for="UserModelId" type="hidden" />

                <div class="form-group mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn custom-btn-success">
                        Сохранить
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        Назад
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
