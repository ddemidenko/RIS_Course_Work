@model List<FileServer.Models.FileModel>

@{
    ViewData["Title"] = "Позиции";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Файлы</h2>
            <a asp-action="Create" class="btn custom-btn-light btn-sm">
                <span>Добавить</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Номер</th>
                            <th>Название</th>
                            <th>Владелец</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.UserModel.Login</td>
                                <td class="d-flex gap-2">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn custom-btn-info btn-sm">
                                        Редактировать
                                    </a>
                                    <a asp-action="Download" asp-route-id="@item.Id" class="btn custom-btn-success btn-sm">
                                        Скачать
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn custom-btn-danger btn-sm">
                                        Удалить
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


