@model List<FileServer.Models.AccessModel>

@{
    ViewData["Title"] = "Доступ";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <h2 class="mb-0">Доступы</h2>
            <a asp-action="Create" class="btn custom-btn-small">
                <span>Добавить</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered custom-table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Номер</th>
                            <th>Пользователь</th>
                            <th>Файл</th>
                            <th>Уровень доступа</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Id)</td>
                                <td>@Html.DisplayFor(model => item.UserModel.Login)</td>
                                <td>@Html.DisplayFor(model => item.FileModel.Name)</td>
                                <td>@Html.DisplayFor(model => item.AccessLevel)</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn custom-btn-info">Редактировать</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn custom-btn-danger">Удалить</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

