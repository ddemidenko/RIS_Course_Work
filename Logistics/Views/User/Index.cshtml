@model List<FileServer.Models.UserModel>

@{ ViewData["Title"] = "Пользователи"; }

<div class="container-xxl m-1">
    <div class="table-wrapper">
        <div class="table-title m-3">
            Пользователи
        </div>
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead">
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Логин
                    </th>
                    <th>
                        Пароль
                    </th>
                    <th>
                        Действия
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Password)
                    </td>
                    <td>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn" style="background-color: #007BFF; color: white;">Редактирование</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn" style="background-color: #FF0000; color: white;">Удаление</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>